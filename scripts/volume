#!/bin/sh

vol=$(mixer vol | grep volume | awk -F ':' '{ printf "%.0f\n", $2 * 100 }')

mute=$(mixer vol | grep mute | awk -F '=' '{ printf $2}')

case 1 in
	$((vol >= 60)) ) icon="ó°•¾" ;;
	$((vol >= 0)) ) icon="ó°–€" ;;
	* ) echo ğŸ”‡ && exit ;;
esac

if [ "$mute" = "on" ]
then
	echo "ó°Ÿ"
else
	echo "$icon$vol%"
fi

