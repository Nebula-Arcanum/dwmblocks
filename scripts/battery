#!/bin/sh

battery=$(acpiconf -i 0 | grep 'Remaining capacity' | awk -F ':' '{gsub("\t", "", $0); print $2 }')

case "$battery" in
  1%|2%|3%|4%|5%) icon="Û∞Çé" ;;
  6%|7%|8%|9%|1[0-5]%) icon="Û∞Å∫" ;;
  1[6-9]%|2[0-5]%) icon="Û∞Åª" ;;
  2[6-9]%|3[0-5]%) icon="Û∞Åº" ;;
  3[6-9]%|4[0-5]%) icon="Û∞ÅΩ" ;;
  4[6-9]%|5[0-5]%) icon="Û∞Åæ" ;;
  5[6-9]%|6[0-5]%) icon="Û∞Åø" ;;
  6[6-9]%|7[0-5]%) icon="Û∞ÇÄ" ;;
  7[6-9]%|8[0-5]%) icon="Û∞ÇÅ" ;;
  8[6-9]%|9[0-5]%) icon="Û∞ÇÇ" ;;
  9[6-9]%|100%) icon="Û∞Åπ" ;;
	* ) echo üîá && exit ;;
esac

echo "$icon$battery"
