#!/bin/sh

date=$(date '+%a, %d/%m/%y')
time=$(date '+%H:%M:%S')

hour=$(date '+%H')

case 1 in
	$((hour = 0)) ) icon="ó±‘–" ;;
	$((hour = 1)) ) icon="ó±‘‹" ;;
	$((hour = 2)) ) icon="ó±‘Œ" ;;
	$((hour = 3)) ) icon="ó±‘" ;;
	$((hour = 4)) ) icon="ó±‘" ;;
	$((hour = 5)) ) icon="ó±‘" ;;
	$((hour = 6)) ) icon="ó±‘" ;;
	$((hour = 7)) ) icon="ó±‘‘" ;;
	$((hour = 8)) ) icon="ó±‘’" ;;
	$((hour = 9)) ) icon="ó±‘“" ;;
	$((hour = 10)) ) icon="ó±‘”" ;;
	$((hour = 11)) ) icon="ó±‘•" ;;
	$((hour = 12)) ) icon="ó±‘–" ;;
	$((hour = 13)) ) icon="ó±‘‹" ;;
	$((hour = 14)) ) icon="ó±‘Œ" ;;
	$((hour = 15)) ) icon="ó±‘" ;;
	$((hour = 16)) ) icon="ó±‘" ;;
	$((hour = 17)) ) icon="ó±‘" ;;
	$((hour = 18)) ) icon="ó±‘" ;;
	$((hour = 19)) ) icon="ó±‘‘" ;;
	$((hour = 20)) ) icon="ó±‘’" ;;
	$((hour = 21)) ) icon="ó±‘“" ;;
	$((hour = 22)) ) icon="ó±‘”" ;;
	$((hour = 23)) ) icon="ó±‘•" ;;
	* ) echo ğŸ”‡ && exit ;;
esac

echo "îª°$date, $icon$time"
